<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:id="@+id/layoutMain"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/hello"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:text="Witaj..."
            android:textSize="16sp"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layoutRoboczy1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/tlodashboard1"
        android:layout_marginBottom="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_below="@+id/user">

        <AnalogClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtClock"
            android:textSize="50dp"
            android:layout_centerHorizontal="true"
            android:format24Hour="true" />

        <TextView
            android:id="@+id/stanMiasto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Miasto"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <LinearLayout
            android:id="@+id/linearPogoda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/stanMiasto">

            <TextView
                android:id="@+id/stanPogoda"
                android:layout_below="@id/stanMiasto"
                android:layout_width="0dp"
                android:layout_weight="0.8"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="pogoda" />

            <TextView
                android:id="@+id/stanC"
                android:text="PIEKŁO"
                android:layout_alignParentRight ="true"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"/>

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRoboczy2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="30dp"
        android:background="@drawable/tlodashboard2"
        android:layout_below="@id/layoutRoboczy1"
        android:layout_marginBottom="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/zadanieTODO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Zadanie"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:text="Nazwa"
            android:id="@+id/txtNazwa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/zadanieTODO"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Patryk"
            android:id="@+id/txtData"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@id/txtNazwa"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/textMiejsce"
            android:text="Justyna #ladnapani"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/txtNazwa"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layoutRoboczy3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="35dp"
        android:background="@drawable/tlodashboard3"
        android:layout_below="@id/layoutRoboczy2"
        android:layout_marginBottom="10dp"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/saldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Saldo"
            android:textAllCaps="true"
            android:textStyle="bold"/>

        <TextView
            android:text="Liczba"
            android:id="@+id/txtLiczba"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/saldo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>